{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src", // Set baseUrl to the src directory
    "paths": {
      "@/*": ["*"] // This allows you to use @ to refer to the src directory
    }
  },
  "include": ["src/**/*"]
}
